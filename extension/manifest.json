{
	"manifest_version": 2,
	"version": "4.0",
	"name": "Carbon Privacy & Security",
	"description": "Unblock the Internet and browse freely.",
	"permissions": [
		"http://*/*",
		"https://*/*",
		"*://*/*",
		"proxy",
		"storage",
		"webRequest",
		"webRequestBlocking",
		"tabs",
		"notifications"
	],
	"icons": {
		"16": "/assets/img/carbon16.png",
		"32": "/assets/img/carbon32.png",
		"48": "/assets/img/carbon48.png",
		"128": "/assets/img/carbon128.png"
	},
	"background": {
		"scripts": [
			"/assets/js/background.js"
		]
	},
	"browser_action": {
		"default_icon": {
			"16": "/assets/img/carbon16.png",
			"32": "/assets/img/carbon32.png",
			"48": "/assets/img/carbon48.png",
			"128": "/assets/img/carbon128.png"
		},
		"default_title": "Carbon VPN",
		"default_popup": "/assets/html/popup.html"
	}
}
